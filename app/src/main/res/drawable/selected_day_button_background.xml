<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android = "http://schemas.android.com/apk/res/android">
	<item android:state_selected = "true">
		<shape android:shape = "rectangle">
			<solid android:color = "@color/colorAccent" /> <!-- Change the color as per your preference -->
			<corners android:radius = "4dp" /> <!-- Adjust the corner radius as needed -->
		</shape>
	</item>
	<item android:state_selected = "false">
		<shape android:shape = "rectangle">
			<solid android:color = "@android:color/transparent" />
			<corners android:radius = "4dp" /> <!-- Adjust the corner radius as needed -->
			<stroke android:width = "1dp" android:color = "@color/colorAccent" /> <!-- Change the color as per your preference -->
		</shape>
	</item>
</selector>