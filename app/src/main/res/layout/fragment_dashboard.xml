<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android = "http://schemas.android.com/apk/res/android"
		xmlns:tools = "http://schemas.android.com/tools"
		android:layout_width = "match_parent"
		android:layout_height = "match_parent"
		xmlns:app = "http://schemas.android.com/apk/res-auto"
		tools:context = ".DashboardFragment"
		android:orientation = "vertical"
		>

	<TextView
			android:text="@string/features"
			android:layout_marginHorizontal="18dp"
			android:layout_marginTop="16dp"
			android:textStyle="bold"
			android:textAppearance="@style/TextAppearance.AppCompat.Medium"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"/>

	<LinearLayout
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:orientation = "horizontal"
			android:padding="16dp"
			>

		<androidx.cardview.widget.CardView
				android:id="@+id/dictionary_card"
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:layout_weight = "1"
				app:cardElevation ="2dp"
				app:cardCornerRadius="12dp"
				android:layout_marginVertical="2dp"
				android:layout_marginStart="2dp"
				android:layout_marginEnd="8dp"
				>

			<LinearLayout
					android:layout_width = "match_parent"
					android:layout_height = "match_parent"
					android:padding="12dp"
					android:orientation="vertical">

				<ImageView
						android:padding="16dp"
						android:src="@drawable/search"
						android:layout_width = "wrap_content"
						android:layout_height = "130dp"
						android:contentDescription = "@string/dictionary"
						/>

				<TextView
						android:gravity="center"
						android:textStyle="bold"
						android:text="@string/dictionary"
						android:textAppearance="@style/TextAppearance.AppCompat.Body2"
						android:layout_width = "match_parent"
						android:layout_height = "wrap_content"
						/>

				<TextView
						android:text="@string/instant_word_definitions_and_examples"
						android:layout_width = "match_parent"
						android:gravity="center"
						android:textSize="12sp"
						android:layout_height = "wrap_content"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
				android:id="@+id/calculator_card"
				android:layout_width = "match_parent"
				android:layout_height = "match_parent"
				android:layout_weight = "1"
				app:cardElevation ="2dp"
				app:cardCornerRadius="12dp"
				android:layout_marginVertical="2dp"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="2dp"
				>

			<LinearLayout
					android:layout_width = "match_parent"
					android:layout_height = "match_parent"
					android:padding="12dp"
					android:orientation="vertical">

				<ImageView
						android:padding="16dp"
						android:src="@drawable/philippine_peso"
						android:layout_width = "match_parent"
						android:layout_height = "130dp"
						android:contentDescription = "@string/dictionary"
						/>

				<TextView
						android:gravity="center"
						android:textStyle="bold"
						android:text="@string/calculator"
						android:textAppearance="@style/TextAppearance.AppCompat.Body2"

						android:layout_width = "match_parent"
						android:layout_height = "wrap_content"
						/>

				<TextView
						android:text="@string/specialized_tool_for_computations"
						android:layout_width = "match_parent"
						android:gravity="center"
						android:textSize="12sp"
						android:layout_height = "wrap_content"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>
	</LinearLayout>

	<LinearLayout
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:orientation = "horizontal"
			android:paddingHorizontal="16dp"
			>

		<androidx.cardview.widget.CardView
				android:id="@+id/learn_card"
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:layout_weight = "1"
				app:cardElevation ="2dp"
				app:cardCornerRadius="12dp"
				android:layout_marginVertical="2dp"
				android:layout_marginStart="2dp"
				android:layout_marginEnd="8dp"
				>

			<LinearLayout
					android:layout_width = "match_parent"
					android:layout_height = "match_parent"
					android:padding="12dp"
					android:orientation="vertical">

				<ImageView
						android:padding="16dp"
						android:src="@drawable/learning"
						android:layout_width = "match_parent"
						android:layout_height = "130dp"
						android:contentDescription = "@string/dictionary"
						/>

				<TextView
						android:gravity="center"
						android:textStyle="bold"
						android:text="@string/learn"
						android:textAppearance="@style/TextAppearance.AppCompat.Body2"

						android:layout_width = "match_parent"
						android:layout_height = "wrap_content"
						/>

				<TextView
						android:text="@string/specialized_tool_for_computations"
						android:layout_width = "match_parent"
						android:gravity="center"
						android:textSize="12sp"
						android:layout_height = "wrap_content"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
				android:id="@+id/quiz_card"
				android:layout_width = "match_parent"
				android:layout_height = "match_parent"
				android:layout_weight = "1"
				app:cardElevation ="2dp"
				app:cardCornerRadius="12dp"
				android:layout_marginVertical="2dp"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="2dp"
				>

			<LinearLayout
					android:layout_width = "match_parent"
					android:layout_height = "match_parent"
					android:padding="12dp"
					android:orientation="vertical">

				<ImageView
						android:padding="16dp"
						android:src="@drawable/test"
						android:layout_width = "match_parent"
						android:layout_height = "130dp"
						android:contentDescription = "@string/dictionary"
						/>

				<TextView
						android:gravity="center"
						android:textStyle="bold"
						android:text="@string/quiz"
						android:textAppearance="@style/TextAppearance.AppCompat.Body2"
						android:layout_width = "match_parent"
						android:layout_height = "wrap_content"
						/>

				<TextView
						android:text="@string/test_your_knowledge"
						android:layout_width = "match_parent"
						android:gravity="center"
						android:textSize="12sp"
						android:layout_height = "wrap_content"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

	</LinearLayout>

	<TextView
			android:gravity="center"
			android:layout_marginTop="16dp"
			android:layout_marginHorizontal="18dp"
			android:textSize="16sp"
			android:text="@string/tip"
			android:textStyle="italic"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"/>

	<TextView
			android:layout_marginTop="4dp"
			android:layout_marginHorizontal="18dp"
			android:id="@+id/randomTips"
			android:gravity="center"
			android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
			android:layout_width = "match_parent"
			android:background="@drawable/button_background"
			android:padding="6dp"
			android:layout_height = "wrap_content"/>
</LinearLayout>