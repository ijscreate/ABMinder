<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mortgageCalculatorCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical"
                >

            <!-- Principal -->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/principal_amount"
                    >

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPrincipalMortgage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:importantForAutofill="no"
                        android:paddingHorizontal="6dp"
                        android:textColorHint="#757575"
                        />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Interest Rate -->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/annual_interest_rate"
                    >

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextInterestRateMortgage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:importantForAutofill="no"
                        android:paddingHorizontal="6dp"
                        android:textColorHint="#757575"
                        />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Loan Term -->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/loan_term_years"
                    >

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextLoanTermMortgage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:importantForAutofill="no"
                        android:paddingHorizontal="6dp"
                        android:textColorHint="#757575"
                        />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                <!-- Solution Button -->
                <Button
                        android:id="@+id/buttonSolution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/show_explanation"
                        style="?android:attr/buttonBarButtonStyle"
                        />

                <!-- Calculate Button -->
                <Button
                        android:id="@+id/buttonCalculateMortgage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calculate"
                        style="?android:attr/buttonBarButtonStyle"
                        />
            </LinearLayout>

            <!-- Result TextView -->
            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textViewMortgageResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="6dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    />

            <!-- Description TextView -->
            <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:textSize="16sp"
                    />
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
